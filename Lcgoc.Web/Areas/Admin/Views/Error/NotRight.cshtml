@{
    ViewBag.Title = "权限控制";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSimple.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i>首页</a></li>
        <li class="active">权限控制</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="error-page">
        <h2 class="headline text-red">600</h2>

        <div class="error-content">
            <h3><i class="fa fa-warning text-red"></i>没有操作权限！</h3>
            <p>如果您需要该操作权限，请复制 <span style="color:red;">@ViewBag.Controller / @ViewBag.Action</span> 给相关<a href="javascript:void();">人员</a></p>
        </div>
    </div>
    <!-- /.error-page -->

</section>
