@model Lcgoc.Model.admin_menu
@{
    ViewBag.Title = "菜单管理";
    Layout = null;
}

<h2>菜单管理</h2>

@using (Html.BeginForm("Add", "Menu"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.code, new { @class = "form-control", @placeholder = "邮箱" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.icon, new { @class = "form-control", @placeholder = "邮箱" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "邮箱" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.allowused, new { @class = "form-control", @placeholder = "邮箱" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.modifyDTM, new { @class = "form-control", @placeholder = "邮箱" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.level, new { @class = "form-control", @placeholder = "邮箱" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        @Html.TextBoxFor(m => m.pullRightContainer, new { @class = "form-control", @placeholder = "邮箱" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary btn-block btn-flat">提 交</button>
    </div>    
}
